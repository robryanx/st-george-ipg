{
  "name": "mitchdav/st-george-ipg",
  "description": "A PHP client implementation of the St.George Internet Payment Gateway using the Webpay library.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Mitchell Davis",
      "email": "mitch@wingmanwebdesign.com.au"
    }
  ],
  "scripts": {
    "test": "php vendor/bin/phpunit --testsuite all",
    "test:end-to-end": "php vendor/bin/phpunit --testsuite end-to-end",
    "test:integration": "php vendor/bin/phpunit --testsuite integration",
    "test:unit": "php vendor/bin/phpunit --testsuite unit"
  },
  "autoload": {
    "psr-4": {
      "StGeorgeIPG\\": "src/"
    }
  },
  "require": {
    "php": ">=5.6",
    "freelancehunt/php-credit-card-validator": "^3.2",
    "sabre/xml": "^1.5",
    "guzzlehttp/guzzle": "^6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "nesbot/carbon": "^1.22",
    "satooshi/php-coveralls": "^1.0"
  }
}
